<Window x:Name="frmLogin" x:Class="Help_Desk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Help_Desk"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400
        ">
    <Grid>
        <Label x:Name="lblUsuario" Content="Usuário" HorizontalAlignment="Left" Margin="175,45,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblSenha" Content="Senha" HorizontalAlignment="Left" Margin="175,125,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbUsuario" HorizontalAlignment="Left" Height="23" Margin="137,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txbSenha" HorizontalAlignment="Left" Height="23" Margin="137,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="txbEntrar" Content="Entrar" HorizontalAlignment="Left" Margin="241,200,0,0" VerticalAlignment="Top" Width="76"/>
        <Label x:Name="lblRecuperarSenha" Content="Recuperar a senha" HorizontalAlignment="Left" Margin="80,198,0,0" VerticalAlignment="Top" Foreground="#FFC31515"/>

    </Grid>
</Window>
